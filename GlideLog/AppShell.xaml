<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GlideLog.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GlideLog"
    xmlns:views="clr-namespace:GlideLog.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="GlideLog">

    <TabBar>
        <ShellContent
            Title="Flights"
            ContentTemplate="{DataTemplate views:FlightListView}"
            Route="FlightView" />

        <ShellContent
            Title="Totals"
            ContentTemplate="{DataTemplate views:TotalsView}"
            Route="TotalView" />

        <ShellContent
            Title="add"
            ContentTemplate="{DataTemplate views:AddOrEditFlightEntryView}"
            Route="AddOrEditFlightEntryView" />
    </TabBar>
</Shell>
