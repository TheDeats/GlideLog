<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GlideLog.Views.AddFlightEntryView"
             xmlns:vm="clr-namespace:GlideLog.ViewModels"
             x:DataType="vm:AddFlightEntryViewModel"
             Title="AddFlightEntryView">
    <VerticalStackLayout>
        <HorizontalStackLayout>
            <Label Text="Date:"/>
            <Entry Text="{Binding DateNTime}"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout>
            <Label Text="Site:"/>
            <Entry Text="{Binding Site}"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout>
            <Label Text="Glider:"/>
            <Entry Text="{Binding Glider}"/>
        </HorizontalStackLayout>
        <Button Text="Save"/>
    </VerticalStackLayout>
</ContentPage>